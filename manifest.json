{
  "manifest_version": 3,
  "name": "Car Valuation Extension for Cam Do Tan Phu",
  "version": "1.0",
  "author": "phuclh",
  "description": "Enter car details, get preliminary valuation, and send info to staff based on camdotanphu.com.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "phuclh.cyno@gmail.com"
    }
  }
}